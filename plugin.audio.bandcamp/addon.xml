	<description lang="es_ES">Descubre nuevos artistas y navega por tu colección.</description>
        <description lang="fr_FR">Découvrez de nouveaux artistes et parcourez votre collection</description>
        <description lang="it_IT">Scopri nuovi artisti e sfoglia la tua collezione</description>	
        <platform>all</platform>
        <news>Added download option.
        </news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
            <screenshot>screenshot/collection.png</screenshot>
            <screenshot>screenshot/discover.png</screenshot>

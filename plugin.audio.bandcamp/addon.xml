<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.bandcamp" name="Bandcamp" version="0.0.2" provider-name="Phantom Raspberry Blower">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.pil" version="1.1.7"/>
        <import addon="script.module.mutagen" version="1.44.0"/>
        <import addon="script.module.requests" version="2.22.0+matrix.1"/>
        <import addon="script.module.future" version="0.18.2+matrix.1"/>
        <import addon="script.common.plugin.cache" version="2.6.1.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">https://bandcamp.com</summary>
        <summary lang="de_DE">https://bandcamp.com</summary>
        <summary lang="es_ES">https://bandcamp.com</summary>
        <summary lang="fr_FR">https://bandcamp.com</summary>
